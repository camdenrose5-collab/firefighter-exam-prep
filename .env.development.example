# =============================================================================
# DEVELOPMENT ENVIRONMENT
# Local development settings - safe for testing
# =============================================================================

NODE_ENV=development

# -----------------------------------------------------------------------------
# Next.js Frontend
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Google Cloud Configuration (Development/Testing)
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-dev-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Discovery Engine (for Fire Captain Quiz)
DATA_STORE_ID=your-dev-data-store-id

# Model Configuration  
VERTEX_MODEL=gemini-2.0-flash-001
EMBEDDING_MODEL=text-embedding-004

# -----------------------------------------------------------------------------
# Database (Local SQLite)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./backend/data/questions.db

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
SECRET_KEY=dev-secret-key-not-for-production-use
TOKEN_EXPIRY_HOURS=24

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------
UPLOAD_DIR=./data/uploads
CHROMA_DIR=./data/chroma_db

# -----------------------------------------------------------------------------
# Debug Settings
# -----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=DEBUG
